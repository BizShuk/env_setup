#!/bin/bash
### to do: auto pull and push and show comflict
source settings.sh

[ -n "$1" ] && path="$1" || path="${project_dir}/*/"

dirs="$(echo ${path})"

check_projects(){
    need_update=0
    for dir in ${@}
    do
        pushd $dir >/dev/null

        [ -e .git ] || continue

        git -C ${dir} fetch >/dev/null
        diff_content=$(git -C ${dir} diff --stat --color remotes/origin/master 2>/dev/null)
        not_git_repo="$?"

        if [ -n "${diff_content}" ] && [ "$not_git_repo" == "0" ]; then

            need_update=1
            echo $dir        
#            echo "$diff_content" | sed -e 's/^/\t/g'
                echo -e "\tuncommmited"
                git diff --stat | sed -e 's/^/\t\t/g'
                echo 
                echo -e "\tremote with HEAD"
                git diff --stat --color HEAD remotes/origin/master | sed -e 's/^/\t\t/g'
                echo 

        fi
        popd >/dev/null
        
    done
    return $need_update
}

check_projects $dirs
[ "$?" == "0" ] && echo "no need to update projectes" || echo "above need to update"
