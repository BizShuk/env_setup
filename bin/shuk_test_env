#!/bin/bash

# generate shuk test env container

mode=$1
cname=shuk
count=5


startall(){
    docker start `docker ps -a -q -f "name=$cname"`
}
# stop all container
stopall(){
    docker stop `docker ps -q -f "name=$cname"`
}

# rm containersshuk
rmall(){
    docker rm `docker ps -q -f "status=exited"`
}

create(){
    for ((i=1; i<=$count; i++))
    do
        docker run -d --name $cname$i -h $cname$i --mac-address aa:aa:aa:aa:aa:0$i base 
    done
   
}


case $mode in
start)
    startall $cname;
;;
stop)
    stopall $cname;
;;
rm)
    rmall $cname;
;;
create)
    create $cname;
;;
esac


