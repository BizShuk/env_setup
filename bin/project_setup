#!/bin/bash

echo "" >> README.md
ln -s README.md AGENTS.md
ln -s README.md GEMINI.md
ls -s README.md CLAUDE.md

mkdir .agent
ln -s .agent .claude
echo "If .claude is used in this project, then $(ln -s .claude .agent)"

ln -sf .agent .gemini
ln -sf .agent .vscode
mkdir -p .agent/rules
mkdir -p .agent/skills

if [ ! -f ".agent/settings.json" ]; then

cat <<EOF > .agent/settings.json
{
  "mcp": {
    "excluded": [
    ]
  },
  "mcpServers": {
  }
}
EOF

fi

project_path=$(pwd)
project_name=$(basename "$project_path")

if [ -d "$HOME/projects/llm_plugin" ]; then
  ln -sf "$(pwd)/.agent" "$HOME/projects/llm_plugin/projects/${project_name}"
fi
