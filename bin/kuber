#!/bin/bash
# you need to get kubectl first that build by kubernets cluster

mode=$1

kubectl config view | grep current-context | awk '{print $2}'

get(){
    if [ "$#" == "0" ] || [ "$1" == "-h" ]; then
        echo "Usage: kuber get [rc|po|se|secret|node|serviceaccount|namespace|event]"
        exit 0;
    fi
    kubectl get $1
}

status(){
    get rc
    get po
    get se
    get secret
    get node
    get serviceaccount
    get namespace
    get event
    exit 0
}


case $mode in
    get)        get "${@:2}"    ;;
    status)     status          ;;
    *)                          ;;

esac
