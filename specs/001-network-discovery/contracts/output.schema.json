{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NetworkDiscoveryOutput",
  "type": "object",
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "duration_seconds": { "type": "number" },
    "interfaces": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "ip": { "type": "string" },
          "subnet": { "type": "string" },
          "gateway": { "type": "string" }
        }
      }
    },
    "hosts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ip": { "type": "string" },
          "mac": { "type": "string" },
          "hostname": { "type": "string" },
          "manufacturer": { "type": "string" },
          "os_guess": { "type": "string" },
          "status": { "type": "string", "enum": ["online", "offline"] },
          "services": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "port": { "type": "integer" },
                "protocol": { "type": "string", "enum": ["tcp", "udp"] },
                "name": { "type": "string" },
                "banner": { "type": "string" },
                "state": { "type": "string", "enum": ["open", "closed", "filtered"] }
              }
            }
          }
        }
      }
    }
  },
  "required": ["timestamp", "duration_seconds", "hosts"]
}
