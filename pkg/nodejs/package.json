/*

*/
{

    "name": "<app_name>",   //
    "version": "0.0.1",     // app version
    "description": "<desc>",// app desc
    "main": "index.js",     //
    "private": true,        //

    "scripts":{             //
        "build":"webpack",
        "test":"command line",
        "dev": "webpack-dev-server --devtool eval --progress --colors",
        "deploy": "NODE_ENV=production webpack -p",
        "start": "ndoe ./bin/www"
    },
    // package version
    //      Patch releases: 1.0 or 1.0.x or ~1.0.4
    //      Minor releases: 1 or 1.x or ^1.0.4
    //      Major releases: * or x
    //
    "dependencies": { },     // append by npm install <packages> --save
    "devDependencies": { }, // append by npm install <packages> --save-dev

    "repository":{          // project repository
        "type":"git",
        "url":"<github_url>"
    },

    "server":{              // self-defined server config , require by bin/www
        "port" : 7000
    }

    "keywords":[],          // just like tags
    "bugs":{
        "url":"<issue_url>"
    },
    "homepage": "<official site url>"
}

